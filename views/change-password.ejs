    <h1>Passwort ändern</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /change-password route -->
            <form action="/change-password" method="POST">
              <div class="form-group">
                <label for="password">Altes Passwort</label>
                <input type="password" class="form-control" name="oldpassword" required>
              </div>
              <br>
              <div class="form-group">
                <label for="password">Neues Passwort</label>
                <input type="password" class="form-control" name="newpassword" required>
              </div>
              <div class="form-group">
                <label for="password">Neues Passwort wiederholen</label>
                <input type="password" class="form-control" name="repeatnewpassword" required>
              </div>
              <br>
              <button type="submit" class="btn btn-dark">Ändern</button>
            </form>
          </div>
        </div>
      </div>
    </div>
